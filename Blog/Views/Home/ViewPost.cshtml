@model ViewPostViewModel


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title> - BlogSite.Web</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/site.css" />
    <link href="/open-iconic/font/css/open-iconic-bootstrap.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" href="/">BlogSite.Web</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/">Home</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" href="/Home/MostRecent">Most Recent</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/home/addpost">Admin</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">

            <div class="row">

                <!-- Post Content Column -->
                <div class="col-lg-8">

                    <!-- Title -->
                    <h1 class="mt-4">@Model.Post.Title</h1>

                    <!-- Author -->
                    <p class="lead">
                        by
                        <a href="#">Elka Rochel Samber</a>
                    </p>

                    <hr>

                    <!-- Date/Time -->
                    <p>Posted on @Model.Post.DatePosted.ToShortDateString()</p>

                    <hr>

                    <p>@Model.Post.Body</p>
                    <hr>

                    <!-- Comments Form -->
                    <div class="card my-4">
                        <h5 class="card-header">Leave a Comment:</h5>
                        <div class="card-body">
                            <form method="post" action="/home/submitcomment">
                                <input type="hidden" value="@Model.Post.Id" name="postId" />
                                <div class="form-group">
                                    <input id="name" type="text" placeholder="Please enter your name" class="form-control" name="name" value="@Model.Name" />
                                </div>
                                <div class="form-group">
                                    <textarea placeholder="Type your comment here but remember to be be nice..." id="body" name="body" class="form-control" rows="3"></textarea>
                                </div>
                                <button id="submit" disabled class="btn btn-primary">Submit</button>
                            </form>
                        </div>
                    </div>

                    @foreach (Comment c in Model.Post.Comments)
                    {
                        <div class="media mb-4">
                            <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
                            <div class="media-body ml-3">
                                <h5 class="mt-0">
                                    @c.Name
                                    <small>@c.DatePosted</small>
                                </h5>
                                @c.Body
                            </div>
                        </div>
                    }
                </div>
            </div>

        </main>
    </div>

    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/site.js?v=4q1jwFhaPaZgr8WAUSrux6hAuh0XDg9kPS3xIVq36I0"></script>

    <script src="/js/post.js"></script>
    @section Scripts {
        <script src="~/js/add-comment.js"></script>
    }

</body>
</html>




